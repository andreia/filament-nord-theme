{
    "name": "andreia/filament-nord-theme",
    "type": "library",
    "description": "A minimalist Arctic Nord theme for FilamentPHP",
    "keywords": [
        "php",
        "laravel",
        "filament",
        "filamentphp",
        "filament-theme",
        "theme",
        "arctic",
        "nord-theme"
    ],
    "homepage": "https://github.com/andreia/filament-nord-theme",
    "support": {
        "issues": "https://github.com/andreia/filament-nord-theme/issues",
        "source": "https://github.com/andreia/filament-nord-theme"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Andreia Bohner",
            "email": "andreiabohner@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "filament/filament": "^5.0",
        "illuminate/contracts": "^11.0|^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.10.0||^8.1.1",
        "larastan/larastan": "^2.0.1||^3.0",
        "orchestra/testbench": "^9.0.0||^10.0.0",
        "pestphp/pest": "^3.0||^4.0",
        "pestphp/pest-plugin-arch": "^3.0||^4.0",
        "pestphp/pest-plugin-laravel": "^3.0||^4.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0||^2.0",
        "phpstan/phpstan-phpunit": "^1.0||^2.0"
    },
    "autoload": {
        "psr-4": {
            "Andreia\\FilamentNordTheme\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Andreia\\FilamentNordTheme\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Andreia\\FilamentNordTheme\\FilamentNordThemeServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
